def creds = { withCredentials([[ $class: 'AmazonWebServicesCredentialsBinding', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY', credentialsId: '${AWS_ACCOUNT}']])}

podTemplate(containers: [
    containerTemplate(
        name: 'terraform', 
        image: 'hashicorp/terraform',
        command: 'sleep' ,
        args: '30d'
        )
  ]) {

    node(POD_LABEL) {
        stage('Get TF') {
            container('terraform') {
                stage('Shell Execution') {
                    sh '''
                    git clone https://github.com/jecausey/ec2.git /tmp/git/
                    '''
                }
            }
        }
        stage('TF init') {
            container('terraform') {
                stage('Shell Execution') {
                    sh "cd /tmp/git ; terraform init"
                }
            }
        }
        stage('TF plan') {
            container('terraform')
               {
                stage('Shell Execution') {
                    { withCredentials([[ $class: 'AmazonWebServicesCredentialsBinding', accessKeyVariable: 'AWS_ACCESS_KEY_ID', secretKeyVariable: 'AWS_SECRET_ACCESS_KEY', credentialsId: '${AWS_ACCOUNT}']])}
                    sh "cd /tmp/git ; terraform plan -out=tfplan"
                }
            }
        }
    }
}